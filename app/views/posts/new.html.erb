<h1>Create New Post</h1>
<%= simple_form_for @post do |f| %>
<%= f.input :post %>
<%= f.button :submit, class:'btn btn-warning' %>
<% end %> <br/>

<% if user_signed_in? %>
<%= link_to 'Log Out', destroy_user_session_path, method: :delete, data: { confirm: 'GoodBye' }, class: 'btn btn-primary' %>
<% else %>
<%= link_to 'Log In', new_user_session_path, class:'btn btn-info' %>
<%= link_to 'Sign Up',  new_user_registration_path, class:'btn btn-info' %>
<% end %>