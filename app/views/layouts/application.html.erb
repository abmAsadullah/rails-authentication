<!DOCTYPE html>
<html>
  <head>
    <title>RailsAuthentication</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    <% if user_signed_in? %>
<%= link_to 'Create A New Post', new_post_path, class:'btn btn-success lv-3' %><br>
<%= link_to 'Log Out', destroy_user_session_path, method: :delete, data: { confirm: 'GoodBye' }, class: 'btn btn-primary lv-4' %>
<% else %>
<%= link_to 'Log In', new_user_session_path, class:'btn btn-info lv-1' %>
<%= link_to 'Sign Up',  new_user_registration_path, class:'btn btn-info lv-2' %>
<% end %>     
 
    <%= yield %>
  </div>
  </body>
</html>
